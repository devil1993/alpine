{
  "name": "alpine",
  "version": "1.0.0",
  "description": "Basic alpine based site.",
  "main": "site.js",
  "scripts": {
    "test": "test",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "build:js": "webpack --mode=production",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "watch": "run-p serve watch:*",
    "build": "run-p build:*",
    "start": "http-server ./dist -p 80"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devil1993/alpine.git"
  },
  "keywords": [
    "alpine",
    "POC",
    "learning"
  ],
  "author": "Samanway Ghatak",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devil1993/alpine/issues"
  },
  "homepage": "https://github.com/devil1993/alpine#readme",
  "dependencies": {
    "alpinejs": "^3.7.0",
    "http-server": "^14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "browser-sync": "^2.27.7",
    "htmlnano": "^1.1.1",
    "imagemin-cli": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "posthtml": "^0.16.5",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.8.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
